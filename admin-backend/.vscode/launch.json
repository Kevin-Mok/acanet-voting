{
  // Current NodeJS debugger configuration
  // 1. Transpiles the typescript into javascript
  // 2. Starts the debugger in javascript
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
